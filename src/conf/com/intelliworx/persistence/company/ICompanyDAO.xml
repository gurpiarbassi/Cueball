<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.intelliworx.persistence.company.ICompanyDAO">
  
  <resultMap id="companyResultMap" type="Company">
	  <id property="primaryKey" column="ID" />
	  <result property="name" column="NAME"/>
	  <result property="registrationNumber" column="REG_NO"/>
	  <result property="addressId" column="ADDRESS_ID"/>
	  <result property="code" column="CODE"/>
	  <result property="incorporationDate" column="INC_DATE" javaType="java.util.Date"/>
	  <result property="taxSchemeId" column="TX_SCHEME_ID"/>
	  <result property="dateCreated" column="DATE_CREATED" javaType="java.util.Date"/>
	  <result property="dateModified" column="DATE_MODIFIED" javaType="java.util.Date"/>
	  <result property="optCount" column="OPT_COUNT"/>
  </resultMap>

  <select id="findByPrimaryKey" parameterType="int" resultMap="companyResultMap">
    SELECT
        ID,
		NAME,
		REG_NO,
		ADDRESS_ID,
		CODE,
		INC_DATE,
		TX_SCHEME_ID,
		DATE_CREATED,
		DATE_MODIFIED,
		OPT_COUNT
	FROM COMPANY
    WHERE ID = #{id}
  </select>
</mapper>